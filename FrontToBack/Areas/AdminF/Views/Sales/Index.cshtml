@model List<SaleVM>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Users</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Fullname
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Total
                                </th>
                                <th>
                                    Products
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (SaleVM sale in Model)
                            {
                            <tr>
                                <td>
                                    @sale.Fullname
                                </td>
                                <td>
                                    @sale.Email
                                </td>
                                <td>
                                    @sale.Date
                                </td>
                                <td>
                                    @sale.Total
                                </td>
                                <td>
                                    <ul>
                                        @foreach (SaleProduct item in sale.SaleProducts)
                                        {
                                            <li>@item.Product.Title - @item.Count - @item.Price</li>
                                        }
                                    </ul>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



