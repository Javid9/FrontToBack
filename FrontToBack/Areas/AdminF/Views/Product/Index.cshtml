@model List<Product>
@{
    ViewData["Title"] = "Index";
    if (ViewBag.Page == null)
    {
        ViewBag.Page = 1;
    }
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Products</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    Count
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Product product in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/img/@product.Image" width="200px" height="200px" />
                                    </td>
                                    <td>
                                        @product.Title
                                    </td>
                                    <td>
                                        @product.Price
                                    </td>
                                    <td>
                                        @product.Count
                                    </td>
                                    <td>
                                        @product.Category.Name
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@product.Id" class="btn btn-success">
                                            <i class="mdi mdi-account-card-details"></i>
                                        </a>
                                        <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning">
                                            <i class="mdi mdi-table-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">
                                            <i class="mdi mdi-delete"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mt-5 justify-content-center">
    <nav aria-label="...">
        <ul class="pagination pagination-sm">
            @for (int i = 1; i <= ViewBag.PageCount; i++)
            {
                if (ViewBag.Page == i)
                {
                    <li class="page-item disabled"><a class="page-link" href="#">@i 10</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" asp-area="AdminF" asp-controller="Product" asp-action="Index" asp-route-page="@i">@i</a></li>
                }
            }
        </ul>
    </nav>
</div>
