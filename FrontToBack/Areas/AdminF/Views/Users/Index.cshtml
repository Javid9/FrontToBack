@model List<UserVM>
@{
    ViewData["Title"] = "Index";
}

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Users</h4>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Fullname
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Username
                                    </th>
                                    <th>
                                        User Role
                                    </th>
                                    <th>
                                        Is Activated
                                    </th>
                                    <th>
                                        Settings
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (UserVM user in Model)
                                {
                                <tr>
                                    <td>
                                        @user.Fullname
                                    </td>
                                    <td>
                                        @user.Email
                                    </td>
                                    <td>
                                        @user.UserName
                                    </td>
                                    <td>
                                        @user.Role
                                    </td>
                                    @if (user.IsActivated)
                                    {
                                        <td style="color:lawngreen">
                                            Active
                                        </td>
                                    }
                                    else
                                    {
                                        <td style="color:red">
                                            Disable
                                        </td>
                                    }
                                <td>
                                    @if (user.IsActivated)
                                    {
                                        <a asp-action="IsActivate" asp-route-id="@user.Id" class="btn btn-danger">
                                            Disabled
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-action="IsActivate" asp-route-id="@user.Id" class="btn btn-success">
                                            Activated
                                        </a>
                                    }
                                    <a asp-action="ChangeRole" asp-route-id="@user.Id" class="btn btn-primary">
                                        Change Role
                                    </a>
                                    <a asp-action="ChangePassword" asp-route-id="@user.Id" class="btn btn-danger">
                                        Change Password
                                    </a>
                                </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

