@model AppUser
@{
    ViewData["Title"] = "ChangePassword";
}

    <div class="row">
        <div class="col-md-12 d-flex align-items-stretch">
            <div class="row">
                <div class="col-md-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">@Model.Fullname</h4>
                            <p>
                                @Model.Email
                            </p>
                            <p>
                                @Model.UserName
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div asp-validation-summary="ModelOnly" class="col-12 text-danger"></div>
            <div class="col-12 mt-3">
                <form method="post">
                    <input type="password" name="NewPassword" placeholder="New Password" />
                    <button type="submit" class="btn btn-success ml-2">Change Password</button>
                </form>
            </div>
            <div class="col-12 mt-3">
                <a class="btn btn-dark" asp-action="Index">Go Back</a>
            </div>
        </div>

